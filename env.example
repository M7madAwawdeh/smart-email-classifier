# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=true

# Database Configuration
DATABASE_URL=sqlite:///emails.db

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=backend/credentials/credentials.json
GMAIL_TOKEN_FILE=backend/credentials/token.json

# OpenRouter API Configuration
OPENROUTER_API_KEY=API-KEY
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=qwen/qwen3-coder:free

# Model Configuration
MODEL_PATH=backend/model/saved_model
CONFIDENCE_THRESHOLD=0.7
MAX_EMAILS_PER_FETCH=10

# Auto-response Configuration
AUTO_RESPONSE_ENABLED=true
AUTO_RESPONSE_TEMPLATES_PATH=backend/templates/responses

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Configuration
DEBUG_MODE=true
TESTING_MODE=false 
